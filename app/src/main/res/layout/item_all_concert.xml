<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginEnd="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

   <com.google.android.material.card.MaterialCardView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:clickable="true"
       android:focusable="true"
       android:checkable="true"
       android:foreground="?selectableItemBackground"
       app:cardCornerRadius="16dp"
       android:backgroundTint="@color/blue_soft">

       <ImageView
           android:id="@+id/item_iv_all_concert"
           android:layout_width="150dp"
           android:layout_height="150dp"
           android:src="@drawable/image_ini"
           android:scaleType="centerCrop"/>
   </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/item_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harry Styles"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_tv_loc_date"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Jakarta, Des 15 2022 di hutanpinus bogor"
        android:maxLines="3"
        android:ellipsize="end"/>


</LinearLayout>